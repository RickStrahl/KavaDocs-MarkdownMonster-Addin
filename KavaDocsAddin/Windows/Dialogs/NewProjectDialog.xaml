<controls:MetroWindow  x:Class="DocHound.Windows.Dialogs.NewProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:DocHound.Windows.Dialogs"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="New Documentation Monster Project" 
        TitleCharacterCasing="Normal"
        WindowStyle="SingleBorderWindow"  ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Icon="../../Assets/DocumentationMonster_Icon_256.png"            
        FontSize="{Binding AppModel.Configuration.WindowPosition.WindowFontSize}"
        Height="450" Width="750" >
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="{Binding AppModel.Configuration.WindowPosition.WindowFontSize}" />
            <Setter Property="Padding" Value="3" />
        </Style>
    </Window.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Image Source="../../Assets/DocumentationMonster_Icon_256.png"
               Margin="25,30,5,0"
               Height="128" VerticalAlignment="Top"></Image>
        
        <StackPanel Margin="20" Grid.Column="1">
            <Label>Project Title</Label>
            <TextBox Name="TextProjectTitle" Text="{Binding ProjectCreator.Title,UpdateSourceTrigger=PropertyChanged}" KeyUp="TextProjectTitle_OnKeyUp"></TextBox>

            <Label Margin="0,10,0,0">Your Company</Label>
            <TextBox Text="{Binding ProjectCreator.Company}"></TextBox>

            <TextBlock Margin="0,10,0,0" TextWrapping="Wrap">Please choose a Path and file name for your new project.
                Projects are created as a directory structure on your hard drive and should be placed into
                a new folder.
            </TextBlock>

            <Label Margin="0,10,0,0">Choose a Project Folder</Label>
            <Grid >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Text="{Binding ProjectCreator.ProjectFolder}"></TextBox>
                <Button Grid.Column="1" Name="ButtonGetDirectory" 
                        Margin="3,0,0,0" Width="28"
                        Click="ButtonGetDirectory_Click">...</Button>
            </Grid>

            <Label Margin="0,10,0,0">Project File Name</Label>
            <TextBox Text="{Binding ProjectCreator.Filename}"></TextBox>


            <StackPanel Orientation="Horizontal">
                <Button Name="ButtonOk" Margin="0,20" Height="40" FontSize="15" Width="175"
                        HorizontalAlignment="Left"   IsDefault="True" Click="Button_CreateProjectClick"  >
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome  Icon="Upload"  FontFamily="pack://application:,,,/FontAwesome.WPF;component/#FontAwesome" Foreground="#FF0E7E28" FontSize="20" />
                        <TextBlock Margin="10,0,0,0" FontSize="14">Create Project</TextBlock>
                    </StackPanel>
                </Button>

                <Button Name="ButtonCancel" Margin="10,20" Height="40" FontSize="15" Width="175" 
                        HorizontalAlignment="Left" IsCancel="True" Click="Button_CancelClick" >
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Icon="Remove" FontFamily="pack://application:,,,/FontAwesome.WPF;component/#FontAwesome" Foreground="DarkRed"  FontSize="20"/>
                        <TextBlock Margin="10,0,0,0" FontSize="14">Cancel</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
