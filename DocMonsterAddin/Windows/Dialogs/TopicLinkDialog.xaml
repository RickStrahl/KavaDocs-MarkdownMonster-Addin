<mah:MetroWindow x:Class="DocMonsterAddin.Windows.Dialogs.TopicLinkDialog" 
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
                           xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"        
                           xmlns:fa6="http://schemas.fontawesome.com/icons/fonts"
                           xmlns:model="clr-namespace:DocMonster.Model;assembly=DocMonster"
                           xmlns:windows="clr-namespace:MarkdownMonster.Windows;assembly=MarkdownMonster"
                           xmlns:controls="clr-namespace:DocMonsterAddin.Controls"
                           xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
                           mc:Ignorable="d"
                           Icon="../../Assets/Icon_128.png"                    
                           Title="Select Topic To Embed"
                           TitleCharacterCasing="Normal"                               
                           WindowStyle="SingleBorderWindow" ResizeMode="CanResize"
                           Padding="4"
                            Style="{StaticResource mmWindow}"
                           WindowStartupLocation="CenterOwner"                                   
                           IsMinButtonEnabled="False" IsMaxRestoreButtonEnabled="False"                       
                           Width="800" Height="680" MinWidth="640" MinHeight="320">
    <mah:MetroWindow.Resources>
        <windows:InvertedBooleanConverter x:Key="InvertedBooleanConverter" />
    </mah:MetroWindow.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <ToolBarPanel>
            <ToolBarPanel.Resources>
                <Style x:Key="{x:Static ToolBar.ButtonStyleKey}" TargetType="Button">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Padding" Value="6,4"/>
                </Style>
            </ToolBarPanel.Resources>
            <StackPanel Orientation="Horizontal">
                <ToolBar FontWeight="Normal">
                    <Button Name="ButtonOk"  
                      IsDefault="True"  
                      Click="Button_Click"
                      Visibility="{Binding IsFileImage, Converter={StaticResource BooleanToVisibilityConverter}}" >
                        <StackPanel Orientation="Horizontal">
                            <fa6:ImageAwesome Margin="0,2,5,0" Icon="DuoTone_CircleCheck"                                             
                                        PrimaryColor="White" SecondaryColor="ForestGreen" 
                                        SecondaryOpacity="1" Height="19" />
                            <TextBlock  FontWeight="SemiBold" >Embed Image</TextBlock>
                        </StackPanel>
                    </Button>

                  


                    <Button Name="ButtonCancel" IsCancel="True" Click="Button_Click" >
                        <StackPanel Orientation="Horizontal">
                            <fa6:FontAwesome Icon="Solid_XMark"                                             
                                       Foreground="Firebrick" FontSize="18"
                                       Margin="0,4,5,0" />
                            <TextBlock>Cancel</TextBlock>
                        </StackPanel>
                    </Button>

                </ToolBar>
            </StackPanel>
        </ToolBarPanel>

        <wpf:WebView2 
            x:Name="WebView" 
            Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" 
            DefaultBackgroundColor="White" ZoomFactor="0.9">
            
        </wpf:WebView2>


        <StackPanel Grid.Column="0" Margin="15 20 20 0" Grid.Row="0">
            <Label>Selected Topic</Label>
            <TextBlock x:Name="TextSelectedTopic" 
                       Text="{Binding SelectedTopic.Title}" />

            <ComboBox x:Name="TextEmbeddingType" SelectedValue="{Binding EmbeddingType}">
                <ComboBoxItem Tag="topic">Topic Id</ComboBoxItem>
                <ComboBoxItem Tag="slug">Slug</ComboBoxItem>
                <ComboBoxItem Tag="title">Encoded Title Text</ComboBoxItem>
            </ComboBox>

            <Button>Embed</Button>
        </StackPanel>


        <Grid x:Name="TreeContainer"  Grid.Row="1" >
            <!--   TreeView gets injected here -->
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0">
            <StatusBar  Grid.Row="2" Height="30"  VerticalAlignment="Bottom" HorizontalAlignment="Stretch" FontSize="14">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />

                                <ColumnDefinition Width="Auto"  />
                                <ColumnDefinition Width="Auto"  />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem Grid.Column="0" Margin="2,1,0,0">
                    <fa6:ImageAwesome Name="StatusIcon" Icon="Solid_Circle" PrimaryColor="ForestGreen" Height="15"/>
                </StatusBarItem>
                <StatusBarItem Grid.Column="1">
                    <TextBlock Name="StatusText" x:FieldModifier="public" HorizontalAlignment="Left">Ready</TextBlock>
                </StatusBarItem>
                <StatusBarItem Grid.Column="2">
                    <TextBlock Name="StatusText2" x:FieldModifier="public" HorizontalAlignment="Left"></TextBlock>
                </StatusBarItem>
                <StatusBarItem Grid.Column="3">
                    <Button Name="ButtonCancelUpload"
                            MaxHeight="20" Height="20" Margin="5 0 2 0"
                            Padding="8 2" Click="ButtonCancelUpload_Click"
                            BorderThickness="0" FontWeight="Normal"  HorizontalAlignment="Left"                            
                            mah:VisibilityHelper.IsVisible="{Binding IsUploading}">
                        <StackPanel Orientation="Horizontal">
                            <fa6:ImageAwesome  Icon="Solid_XMark" PrimaryColor="Firebrick" Height="12" Margin="0 0 5 0"/>
                            <TextBlock>Cancel</TextBlock>
                        </StackPanel>
                    </Button>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>

    </mah:MetroWindow>
